.home-main-theme{
  /*margin: 20rpx 0;*/
}
.theme-box{
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}
.theme-item{
  display: flex;
  height:320rpx;
  width: 50%;
  border-bottom: 4rpx solid #fff;
  position: relative;
  box-sizing: border-box;
}
.theme-item:first-child{
  border-right:4rpx solid #fff;
}
.theme-item.big{
  width: 100%;
}
.theme-item.big .theme-icon view{
  margin: 0 auto;
  width: 150rpx;
  height: 60rpx;
  border-radius: 60rpx;
  line-height: 60rpx;
  border:1rpx solid #fff;
  text-align: center;
  font-size: 24rpx;
}
.theme-item image{
  height: 100%;
  width: 100%;
}
.theme-icon{
  margin-top:10rpx;
  height: 48rpx;
}
.theme-icon image{
  height: 48rpx;
  width: 48rpx;
}


